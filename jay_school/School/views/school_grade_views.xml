<!-- views/school_grade_views.xml -->
<odoo>
    <record id="view_form_school_grade" model="ir.ui.view">
        <field name="name">school.grade.form</field>
        <field name="model">school.grade</field>
        <field name="arch" type="xml">
            <form string="Grade">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="subject_id"/>
                        <field name="marks"/>
                        <field name="grade"/>
                    </group>
                    <footer>
                        <button name="action_save" string="Save" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_school_grade" model="ir.ui.view">
        <field name="name">school.grade.tree</field>
        <field name="model">school.grade</field>
        <field name="arch" type="xml">
            <tree string="Grades">
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="marks"/>
                <field name="grade"/>
            </tree>
        </field>
    </record>

    <record id="action_school_grade" model="ir.actions.act_window">
        <field name="name">Grades</field>
        <field name="res_model">school.grade</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="school_grade_menu" name="Grades" parent="school_management_menu" action="action_school_grade"/>
</odoo>
