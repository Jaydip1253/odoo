<!-- views/school_section_views.xml -->
<odoo>
    <record id="view_form_school_section" model="ir.ui.view">
        <field name="name">school.section.form</field>
        <field name="model">school.section</field>
        <field name="arch" type="xml">
            <form string="Section">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="class_id"/>
                        <field name="teacher_section_ids"/>
                    </group>
                    <footer>
                        <button name="action_save" string="Save" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_school_section" model="ir.ui.view">
        <field name="name">school.section.tree</field>
        <field name="model">school.section</field>
        <field name="arch" type="xml">
            <tree string="Sections">
                <field name="name"/>
                <field name="class_id"/>
            </tree>
        </field>
    </record>

    <record id="action_school_section" model="ir.actions.act_window">
        <field name="name">Sections</field>
        <field name="res_model">school.section</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="school_section_menu" name="Sections" parent="school_management_menu" action="action_school_section"/>
</odoo>
