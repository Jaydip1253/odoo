<!-- views/school_fee_views.xml -->
<odoo>
    <record id="view_form_school_fee" model="ir.ui.view">
        <field name="name">school.fee.form</field>
        <field name="model">school.fee</field>
        <field name="arch" type="xml">
            <form string="Fee">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="fee_type"/>
                        <field name="amount"/>
                        <field name="due_date"/>
                        <field name="paid_status"/>
                        <field name="payment_date"/>
                    </group>
                    <footer>
                        <button name="action_save" string="Save" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_school_fee" model="ir.ui.view">
        <field name="name">school.fee.tree</field>
        <field name="model">school.fee</field>
        <field name="arch" type="xml">
            <tree string="Fees">
                <field name="student_id"/>
                <field name="fee_type"/>
                <field name="amount"/>
                <field name="due_date"/>
                <field name="paid_status"/>
            </tree>
        </field>
    </record>

    <record id="action_school_fee" model="ir.actions.act_window">
        <field name="name">Fees</field>
        <field name="res_model">school.fee</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="school_fee_menu" name="Fees" parent="school_management_menu" action="action_school_fee"/>
</odoo>
