<!-- views/school_teacher_section_views.xml -->
<odoo>
    <record id="view_form_school_teacher_section" model="ir.ui.view">
        <field name="name">school.teacher.section.form</field>
        <field name="model">school.teacher.section</field>
        <field name="arch" type="xml">
            <form string="Teacher Section">
                <sheet>
                    <group>
                        <field name="teacher_id"/>
                        <field name="section_id"/>
                        <field name="schedule_ids"/>
                    </group>
                    <footer>
                        <button name="action_save" string="Save" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_school_teacher_section" model="ir.ui.view">
        <field name="name">school.teacher.section.tree</field>
        <field name="model">school.teacher.section</field>
        <field name="arch" type="xml">
            <tree string="Teacher Sections">
                <field name="teacher_id"/>
                <field name="section_id"/>
            </tree>
        </field>
    </record>

    <record id="action_school_teacher_section" model="ir.actions.act_window">
        <field name="name">Teacher Sections</field>
        <field name="res_model">school.teacher.section</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="school_teacher_section_menu" name="Teacher Sections" parent="school_management_menu" action="action_school_teacher_section"/>
</odoo>
