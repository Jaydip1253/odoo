<!-- views/school_student_views.xml -->
<odoo>
    <record id="view_form_school_student" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="roll_no"/>
                        <field name="dob"/>
                        <field name="address"/>
                        <field name="parent_contact"/>
                        <field name="class_id"/>
                        <field name="section_id"/>
                        <field name="guardian_name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="admission_date"/>
                        <field name="student_image"/>
                    </group>
                    <footer>
                        <button name="action_save" string="Save" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_school_student" model="ir.ui.view">
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree string="Students">
                <field name="name"/>
                <field name="roll_no"/>
                <field name="class_id"/>
                <field name="section_id"/>
            </tree>
        </field>
    </record>

    <record id="action_school_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="school_management_menu" name="School Management" sequence="10"/>
    <menuitem id="school_student_menu" name="Students" parent="school_management_menu" action="action_school_student"/>
</odoo>
