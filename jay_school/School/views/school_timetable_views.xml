<!-- views/school_timetable_views.xml -->
<odoo>
    <record id="view_form_school_timetable" model="ir.ui.view">
        <field name="name">school.timetable.form</field>
        <field name="model">school.timetable</field>
        <field name="arch" type="xml">
            <form string="Timetable">
                <sheet>
                    <group>
                        <field name="teacher_section_id"/>
                        <field name="subject_id"/>
                        <field name="day"/>
                        <field name="time"/>
                    </group>
                    <footer>
                        <button name="action_save" string="Save" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_school_timetable" model="ir.ui.view">
        <field name="name">school.timetable.tree</field>
        <field name="model">school.timetable</field>
        <field name="arch" type="xml">
            <tree string="Timetable">
                <field name="teacher_section_id"/>
                <field name="subject_id"/>
                <field name="day"/>
                <field name="time"/>
            </tree>
        </field>
    </record>

    <record id="action_school_timetable" model="ir.actions.act_window">
        <field name="name">Timetable</field>
        <field name="res_model">school.timetable</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="school_timetable_menu" name="Timetable" parent="school_management_menu" action="action_school_timetable"/>
</odoo>
