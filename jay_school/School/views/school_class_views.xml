<!-- views/school_class_views.xml -->
<odoo>
    <record id="view_form_school_class" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="Class">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="subject_ids"/>
                    </group>
                    <footer>
                        <button name="action_save" string="Save" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_school_class" model="ir.ui.view">
        <field name="name">school.class.tree</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <tree string="Classes">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_school_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="school_class_menu" name="Classes" parent="school_management_menu" action="action_school_class"/>
</odoo>
