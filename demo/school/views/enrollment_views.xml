<odoo>
    <record id="view_enrollment_tree" model="ir.ui.view">
        <field name="name">enrollment.tree</field>
        <field name="model">student.management.enrollment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="date_enrolled"/>
            </tree>
        </field>
    </record>

    <record id="view_enrollment_form" model="ir.ui.view">
        <field name="name">enrollment.form</field>
        <field name="model">student.management.enrollment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="course_id"/>
                        <field name="date_enrolled"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student_management_enrollment" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">student.management.enrollment</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
